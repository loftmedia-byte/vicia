# Variables d'environnement pour Railway
# Copiez ce fichier et renommez-le en .env

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Backend Configuration
NEXT_PUBLIC_BACKEND_URL=https://your-railway-app.railway.app
NEXT_PUBLIC_URL=https://your-railway-app.railway.app
NEXT_PUBLIC_ENV_MODE=PRODUCTION

# API Keys
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GOOGLE_API_KEY=your_google_key

# Database (Railway fournit automatiquement)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Railway fournit automatiquement)
REDIS_URL=redis://host:port

# Security
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Monitoring
SENTRY_DSN=your_sentry_dsn
LANGFUSE_PUBLIC_KEY=your_langfuse_key
LANGFUSE_SECRET_KEY=your_langfuse_secret
